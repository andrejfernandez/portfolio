---
import Swap from '../../svelte/Swap.svelte';
---

<div
	class="h-32 p-10 w-full mx-auto bg-base-100 z-50 fixed border-none bg-opacity-80 backdrop-blur-md"
>
	<div class="flex justify-between mx-72 pb-1 px-5 border-b-2 border-neutral">
		<div class="flex flex-col justify-end pb-2">
			<h1 class="text-3xl font-bold">Andre J. Fernandez</h1>
			<h2 class="text-xl font-semibold">Full-Stack Web Developer</h2>
		</div>
		<div class="flex mt-auto items-end">
			<div class="tooltip tooltip-primary tooltip-top pb-1" data-tip="GitHub">
				<a href="https://github.com/andrejfernandez" target="_blank" class="mt-auto"
					><span class="font-icons text-3xl">code</span></a
				>
			</div>
			<div class="tooltip tooltip-primary tooltip-top pb-1" data-tip="LinkedIn">
				<a href="https://www.linkedin.com/in/andrejfernandez" target="_blank" class="mt-auto mx-5"
					><span class="font-icons text-3xl"
						><span class="material-symbols-outlined"> person_add</span></span
					></a
				>
			</div>
			<Swap client:idle />
		</div>
	</div>
</div>
