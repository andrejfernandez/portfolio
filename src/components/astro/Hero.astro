---
interface Props {
	title: string;
	description: string;
	buttonTitle: string;
	buttonURL: string;
}
const { title, description, buttonTitle, buttonURL } = Astro.props;
---

<div class="hero min-h-screen bg-base">
	<div class="hero-content text-center">
		<div class="max-w-md">
			<h1 class="text-5xl font-bold font-titan">{title}</h1>
			<p class="py-6 font-semibold">
				{description}
			</p>
			<button class="btn btn-primary font-bold">
				<a href=`${{buttonURL}}`>{buttonTitle}W</a></button
			>
			<h1>Menu = <span class="font-icons text-5xl">search</span></h1>
		</div>
	</div>
</div>
